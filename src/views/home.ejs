<%- include('includes/head') %> 
<%- include('includes/nav') %> 

<div class="container">
    <div class="row my-3">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <h1 class="text-center display-1">
                Agenda
            </h1>
            <p class="text-center lead">
                Todos seus contatos estão aqui!
            </p>
            <%- include('includes/messages') %>
        </div>
        <div class="col-lg-2"></div>
    </div>
    <div class="row">
        <div class="col">
            <div class="responsive-table">
                <% if(contatos.length > 0){ %> 
                <table class="table">
                    <% contatos.forEach(contato => { %>
                        <tr>
                            <td><%= contato.nome %></td>
                            <td><%= contato.sobrenome %></td>
                            <td><%= contato.telefone %></td>
                            <td><%= contato.email %></td>
                            <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                        </tr>
                    <% }); %>
                </table>
                <% } else{ %>
                    <p class="text-center lead">Não existe nenhum contato no momento.</p> 
                <% } %>  
            </div>  
        </div>
    </div>
</div>

<%- include('includes/footer') %> 

 
    